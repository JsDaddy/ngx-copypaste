{
    "name": "ngx-copypaste",
    "description": "Awesome ngx copypaste directive",
    "version": "17.3.0",
    "license": "MIT",
    "keywords": [
        "ng2-copypaste",
        "ngx-copypaste",
        "ng2",
        "ng",
        "angular-copypaste",
        "copypaste",
        "angular",
        "angular2",
        "angular2-clipboard",
        "ng2clipboard",
        "jsdaddy",
        "angular-clipboard",
        "clipboard",
        "angular2-clipboard",
        "ng2clipboard",
        "ng2-clipboard",
        "ngx-clipboard"
    ],
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build ngx-copypaste --base-href /ngx-copypaste/ --configuration production",
        "build:lib": "ng build --configuration production ngx-copypaste-lib && npm run copy-libdocs",
        "copy-libdocs": "cp README.md LICENSE dist/ngx-copypaste-lib",
        "publish:lib": "cd dist/ngx-copypaste-lib && npm publish",
        "test": "ng test --code-coverage",
        "test:pre-commit": "ng test --watch=false",
        "lint": "ng lint && npm run lint:scss",
        "lint:scss": "stylelint \"**/*.scss\"",
        "lint:scss:fix": "stylelint \"**/*.scss\" --fix",
        "cypress:open": "cypress open",
        "cypress:bash": "npx cypress run --component",
        "lint:fix": "ng lint --fix && npm run lint:scss:fix",
        "prettier:fix": "npx prettier --write .",
        "type-coverage-report": "typescript-coverage-report",
        "type-coverage": "type-coverage"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/JsDaddy/ngx-copypaste.git"
    },
    "dependencies": {
        "@angular/animations": "17.3.0",
        "@angular/common": "17.3.0",
        "@angular/compiler": "17.3.0",
        "@angular/core": "17.3.0",
        "@angular/forms": "17.3.0",
        "@angular/platform-browser": "17.3.0",
        "@angular/platform-browser-dynamic": "17.3.0",
        "@angular/router": "^17.3.0",
        "core-js": "3.36.1",
        "highlight.js": "^11.9.0",
        "ngx-highlightjs": "^10.0.0",
        "rxjs": "7.8.1",
        "semantic-release": "23.0.4",
        "semantic-release-export-data": "^1.0.1",
        "type-coverage": "^2.27.1"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "17.3.0",
        "@angular-eslint/builder": "17.3.0",
        "@angular-eslint/eslint-plugin": "17.3.0",
        "@angular-eslint/eslint-plugin-template": "17.3.0",
        "@angular-eslint/schematics": "17.3.0",
        "@angular-eslint/template-parser": "17.3.0",
        "@angular/cli": "17.3.0",
        "@angular/compiler-cli": "17.3.0",
        "@angular/language-service": "17.3.0",
        "@commitlint/cli": "19.2.1",
        "@commitlint/config-conventional": "19.1.0",
        "@types/jasmine": "5.1.4",
        "@types/jasminewd2": "2.0.13",
        "@types/node": "20.11.29",
        "@typescript-eslint/eslint-plugin": "^7.3.1",
        "codelyzer": "6.0.2",
        "cypress": "^13.7.0",
        "eslint": "8.57.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-import": "2.29.1",
        "eslint-plugin-json": "3.1.0",
        "eslint-plugin-prettier": "5.1.3",
        "husky": "9.0.11",
        "jasmine-core": "5.1.2",
        "jasmine-spec-reporter": "7.0.0",
        "karma": "6.4.3",
        "karma-chrome-launcher": "3.2.0",
        "karma-coverage-istanbul-reporter": "^3.0.3",
        "karma-jasmine": "5.1.0",
        "karma-jasmine-html-reporter": "2.1.0",
        "ng-packagr": "17.3.0",
        "postcss-scss": "4.0.9",
        "prettier": "3.2.5",
        "puppeteer": "^22.5.0",
        "stylelint": "16.2.1",
        "stylelint-config-prettier": "9.0.5",
        "stylelint-config-recommended-scss": "14.0.0",
        "stylelint-prettier": "5.0.0",
        "ts-node": "10.9.2",
        "typescript": "5.4.2"
    },
    "typeCoverage": {
        "atLeast": 99,
        "ignoreObject": true,
        "ignoreAsAssertion": true,
        "ignoreTypeAssertion;": true,
        "strict": true,
        "suppressError": true,
        "reportSemanticError": true,
        "ignoreCatch": true,
        "ignoreFiles": [
            "server/**/*.ts",
            "server.ts"
        ]
    },
    "private": true
}
